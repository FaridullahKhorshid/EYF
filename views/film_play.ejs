<%- include('common/header') %>
<div class="container">

    <div class="row">
        <div class="p-4 d-flex justify-content-start align-items-center">
            <a href="/film" class="heading text-uppercase d-flex justify-content-start align-items-center pointer">
                <span class="material-icons">arrow_back</span> Terug
            </a>
            <strong class="mx-2"><%= film.name%></strong>
        </div>
    </div>

    <div class="row">
        <div class="col-12 d-flex justify-content-center align-items-center ">
            <video class="rounded-2" width="100%" height="100%" poster="<%= film.poster%>" controls>
                <source src="<%= film.path%>">
                Your browser does not support the video tag.
            </video>
        </div>
    </div>

</div>
<%- include('common/footer') %>
