<div class="container my-4 bg-light">

    <h1 class="font-weight-bold">De populairste producten</h1>
    <hr>

    <div class="row mt-2 justify-content-md-center">
        <%
        var index = Math.random() * (products.length - 4);

        var productsSorted = products.sort(function(){return .5 - Math.random()});

        productsSorted.slice(0, 4).forEach( function(product) { %>
            <!-- Card -->
            <div class="col-sm-6 col-md-4 col-lg-3 p-2">
                <div class="card" id="<%= 'product-' + product.id %>">
                    <!-- Card image -->
                    <div class="view overlay thumbnail-view">
                        <img class="card-img-top thumbnail-image"
                             src="<%= product.image %>"
                             alt="Card image cap">
                    </div>
                    <!-- Card content -->
                    <div class="card-body">
                        <!-- Title -->
                        <div class="card-content">
                            <h5 class="card-title"><%= product.name %></h5>
                            <h5 class="m-1">
                                <span class="text-danger mr-1">â‚¬ <%= product.price %></span>
                            </h5>
                            <div class="d-flex">
                                <label for="<%= 'quantity-' + product.id %>"></label>
                                <select id="<%= 'quantity-' + product.id %>" name="quantity" class="form-select mx-1">
                                    <option value="1">1</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                </select>
                                <a class="btn btn-danger mx-1" data-id="<%= product.id %>"
                                   data-name="<%= product.name %>"
                                   data-price="<%= product.price %>"
                                   data-productType="<%= product.type %>"
                                   onclick="addToShoppingCart(this)">
                                    <span class="material-icons">add_shopping_cart</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>
</div>


